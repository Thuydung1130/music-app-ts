extends ../../layouts/default.pug 
include ../../mixins/box-head.pug

block main
  .container.my-3
    .row
      .col-12
        .box-head #{pageTitle}

    .row 
        each song in favoriteSongs
            .col-6.mb-3
                div(class="song-item")
                    div(class="inner-image")
                        a(href=`/songs/detail/${song.slug}`)
                            img(src=song.infoSong.avatar)
                    div(class="inner-content")
                        div(class="inner-title")
                            a(href=`/songs/detail/${song.infoSong.slug}`) #{song.infoSong.title}
                        div(class="inner-singer")
                            i(class="fa-solid fa-microphone-lines") #{song.infoSinger.fullName}
                        div(class=(" inner-heart active") button-favorite=song.id)
                            i(class="fa-regular fa-heart")
                            |  yêu thích
                        div(class="inner-time")
                            i(class="fa-regular fa-clock")
                            | Hôm nay
