.sing
     
    .sing-left 
        .sing-info 
            img(src="/images/Black_and_White_Piano_Icon_Music_Logo-removebg-preview.png", alt="" id="audio-thumbnail")
            .sing-title 
                .main-title 
                    a(href="") 
                .author
                    a(href="") 
            .pre
                <i class="fa-regular fa-heart"></i>
    .sing-main 
        .sing-play  
            .pre             
                <i class="fa-solid fa-backward-step "></i>
            
            .play 
                <i class="fa-solid fa-play "></i> 
            .pre
                <i class="fa-solid fa-forward-step "></i>
        .process-bar 
            span(id="current-time") 00:00
            span(class="process")
                span(class="process-filled")
                <audio id="audio-player" controls style="display: none;" ></audio>
            span(id="duration") 00:00
    
    .sing-right
        <i class="fa-solid fa-volume-low"></i>
        span(class="volume hv")
        span(class="li")
        <i class="fa-solid fa-music"></i>
