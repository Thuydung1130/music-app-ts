extends ../../layouts/default.pug
include ../../mixins/box-head.pug


block styles
  link(rel="stylesheet", href="/css/song.css")
block main
    .inner-song 
        .songBlock-1 
            div(class="contentleft   inner-songInfo")
                div(class="song-img img img-play" ) 
                    img(src=song.avatar data-id=song.id )
                    .inner-play
                        div(class="play play-img") 
                            <i class="fa-solid fa-play "></i>
                h2 #{song.title}
                 
                p 
                    a(href="/") #{singer.fullName}
                .playAll 
                    <i class="fa-solid fa-play"></i>
                    span PHÁT TẤT CẢ
                .action 
                    div(class=("inner-action inner-heart heart" + (song.isFavoriteSong?" active":"")) button-favorite=song.id)
                        <i class="fa-regular fa-heart"></i>
                    .other 
                        <i class="fa-solid fa-ellipsis"></i>
            .contenRight 
                ul 
                    li 
                        .right-item 
                            span Bài Hát
                            span Thời Gian
                    li 
                        .right-item  
                            .item-left 
                                img(src=song.avatar, alt=""  width=30 height=30)
                                .item-text 
                                    span #{song.title}
                                    p 
                                        a(href="/") #{singer.fullName}

                            span(class="time-song") 05:05
                .info-box
                    h4 Thông Tin
                    ul
                      li 
                        span.label Số lượt nghe
                        span.value #{song.listen}
                      li
                        span.label Số lượt thích
                        span.value #{song.like}
                      li
                        span.label Ngày phát hành
                        span.value #{new Date(song.createdAt).toLocaleDateString('vi-VN')}