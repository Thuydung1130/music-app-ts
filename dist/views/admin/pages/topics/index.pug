extends ../../layouts/default.pug

block main
  if(role.permissions.includes("topics_view"))
    h1(class="mb-4") #{pageTitle}

    .card.mb-3
      .card-header Danh sách
      .card-body
        .row
          .col-8
          .col-4
            if(role.permissions.includes("topics_create"))
              a(
                href=`/${prefixAdmin}/topics/create`
                class="btn btn-outline-success"
              ) + Thêm mới

        table(class="table table-hover table-sm")
          thead
            tr
              th STT
              th Hình ảnh
              th Tiêu đề
              th Trạng thái
              th Hành động
          tbody
            each item, index in topics
              tr
                  td #{index + 1}
                  td 
                    img(
                      src=item.avatar
                      alt=item.title
                      width="100px"
                      height="auto"
                    )
                  td #{item.title}
                  td
                    if (item.status === "active")
                      a(
                        href="javascript:;"
                        class="badge badge-success"
                      ) Hoạt động
                    else
                      a(
                        href="javascript:;"
                        class="badge badge-danger"
                      ) Dừng hoạt động
                  td
                      a(
                        class="btn btn-secondary btn-sm"
                        href=`/${prefixAdmin}/topics/detail/${item.id}`
                      ) Chi tiết
                      if(role.permissions.includes("topics_edit"))
                        a(
                          class="btn btn-warning btn-sm ml-1"
                          href=`/${prefixAdmin}/topics/edit/${item.id}`
                        ) Sửa
                      if(role.permissions.includes("topics_delete"))
                        button(
                          class="btn btn-danger btn-sm ml-1 button-delete"
                          data-id=item.id
                        ) Xoá


